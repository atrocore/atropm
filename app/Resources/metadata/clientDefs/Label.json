{
  "controller": "controllers/record",
  "boolFilterList": [
    "onlyMy"
  ],
  "iconClass": "fas fa-tag",
  "modalViews": {
    "select": "project-management:views/modals/select-records"
  },
  "relationshipPanels": {
    "issues": {
      "select": false,
      "create": false
    }
  },
  "dynamicLogic": {
    "fields": {
      "parent": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "project": {
        "required": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "groupId"
            }
          ]
        }
      },
      "group": {
        "required": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "projectId"
            }
          ]
        }
      }
    }
  }
}