{
  "kanbanViewMode": true,
  "iconClass": "fas fa-exclamation-triangle",
  "controller": "controllers/record",
  "acl": "project-management:acl/issue",
  "boolFilterList": [
    "onlyMy",
    "ownedByMe",
    "assignedToMe",
    "onlyOpen",
    "onlyClosed"
  ],
  "views": {
    "detail": "project-management:views/issue/detail"
  },
  "recordViews": {
    "kanban": "project-management:views/issue/record/kanban"
  },
  "bottomPanels": {
    "detail": [
      {
        "name": "expenses",
        "label": "expenses",
        "view": "project-management:views/issue/record/panels/expenses",
        "order": 10
      }
    ]
  },
  "dynamicLogic": {
    "fields": {
      "milestone": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "projectId",
              "data": {
                "field": "project"
              }
            }
          ]
        }
      },
      "ownerUser": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "projectId"
            }
          ]
        }
      },
      "assignedUser": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isEmpty",
              "attribute": "projectId"
            }
          ]
        }
      }
    }
  }
}
