{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true,
      "audited": true
    },
    "description": {
      "type": "text"
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "assignedUser": {
      "type": "link",
      "required": false,
      "view": "project-management:views/fields/assigned-user-with-teams-filter"
    },
    "teams": {
      "type": "linkMultiple",
      "view": "views/fields/teams",
      "readOnly": true
    },
    "issueType": {
      "type": "enum",
      "required": true,
      "options": [
        "Request",
        "Feature",
        "Bug"
      ],
      "default": "Request",
      "prohibitedEmptyValue": true,
      "audited": true
    },
    "issueNumber": {
      "type": "autoincrement",
      "autoincrement": true,
      "unique": true
    },
    "status": {
      "type": "enum",
      "required": true,
      "prohibitedEmptyValue": true,
      "options": [
        "New",
        "In Progress",
        "Feedback",
        "To Release",
        "Released",
        "Done"
      ],
      "default": "New",
      "audited": true
    },
    "approvalStatus": {
      "type": "enum",
      "required": false,
      "options": [
        "To Approve",
        "NOT Approved",
        "Approved"
      ],
      "default": null,
      "audited": true
    },
    "project": {
      "type": "link",
      "required": true,
      "audited": true,
      "layoutMassUpdateDisabled": true
    },
    "projectGroupId": {
      "type": "varchar",
      "notStorable": true,
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "layoutFiltersDisabled": true,
      "exportDisabled": true,
      "importDisabled": true,
      "emHidden": true
    },
    "milestone": {
      "type": "link",
      "audited": true,
      "view": "project-management:views/issue/fields/milestone"
    },
    "labels": {
      "type": "multiEnum",
      "storeArrayValues": true,
      "required": false,
      "options": [],
      "optionColors": [],
      "view": "project-management:views/issue/fields/labels-colored"
    },
    "repositories": {
      "type": "multiEnum",
      "storeArrayValues": true,
      "required": false,
      "options": [
        "core",
        "pim",
        "pm",
        "completeness",
        "dam",
        "export",
        "import",
        "navigation",
        "ownership",
        "pdf-generator",
        "pdf-productsheets",
        "preview",
        "pricing",
        "revisions",
        "tasks",
        "variants"
      ]
    },
    "expenses": {
      "type": "linkMultiple"
    },
    "dueDate": {
      "type": "date",
      "audited": true
    },
    "estimate": {
      "type": "float",
      "audited": true
    },
    "archived": {
      "type": "bool",
      "audited": true
    },
    "closed": {
      "type": "bool",
      "audited": true
    },
    "hours": {
      "type": "float",
      "audited": true
    },
    "paymentStatus": {
      "type": "enum",
      "required": false,
      "options": [
        "Invoiced",
        "Paid"
      ],
      "default": null,
      "audited": true
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "assignedUser": {
      "type": "belongsTo",
      "entity": "User"
    },
    "teams": {
      "type": "hasMany",
      "entity": "Team",
      "relationName": "EntityTeam",
      "layoutRelationshipsDisabled": true
    },
    "project": {
      "type": "belongsTo",
      "foreign": "issues",
      "entity": "Project",
      "audited": true
    },
    "expenses": {
      "type": "hasMany",
      "foreign": "issue",
      "entity": "Expense",
      "audited": true
    },
    "milestone": {
      "type": "belongsTo",
      "foreign": "issues",
      "entity": "Milestone",
      "audited": true
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false,
    "textFilterFields": [
      "name"
    ]
  },
  "indexes": {
    "name": {
      "columns": [
        "name",
        "deleted"
      ]
    },
    "assignedUser": {
      "columns": [
        "assignedUserId",
        "deleted"
      ]
    }
  }
}
