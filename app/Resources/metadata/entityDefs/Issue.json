{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true,
            "audited": true
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "view": "project-management:views/fields/assigned-user-with-teams-filter"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams",
            "readOnly": true
        },
        "issueType": {
            "type": "enum",
            "required": true,
            "options": [
                "Request",
                "Addon",
                "Feature",
                "Bug",
                "Internal"
            ],
            "default": "Request",
            "audited": true
        },
        "issueNumber": {
            "type": "autoincrement",
            "autoincrement": true,
            "unique": true
        },
        "state": {
            "type": "enum",
            "required": true,
            "options": [
                "open",
                "closed"
            ],
            "default": "open",
            "audited": true
        },
        "status": {
            "type": "enum",
            "required": true,
            "options": [
                "New",
                "ToDo",
                "In Progress",
                "Rejected",
                "Frozen",
                "Done"
            ],
            "default": "New",
            "audited": true
        },
        "approvalStatus": {
            "type": "enum",
            "required": true,
            "options": [
                "New",
                "To Approve",
                "Approved"
            ],
            "default": "New",
            "audited": true
        },
        "estimationStatus": {
            "type": "enum",
            "required": true,
            "options": [
                "New",
                "To Estimate",
                "Estimated"
            ],
            "default": "New",
            "audited": true
        },
        "project": {
            "type": "link",
            "required": true,
            "audited": true,
            "layoutMassUpdateDisabled": true
        },
        "milestone": {
            "type": "link",
            "audited": true,
            "view": "project-management:views/issue/fields/milestone"
        },
        "labels": {
            "type": "linkMultiple",
            "layoutDetailDisabled": true,
            "layoutMassUpdateDisabled": true,
            "importDisabled": true,
            "noLoad": true
        },
        "dueDate" : {
            "type": "date",
            "audited": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "EntityTeam",
            "layoutRelationshipsDisabled": true
        },
        "project": {
            "type": "belongsTo",
            "foreign": "issues",
            "entity": "Project",
            "audited": true
        },
        "milestone": {
            "type": "belongsTo",
            "foreign": "issues",
            "entity": "Milestone",
            "audited": true
        },
        "labels": {
            "type": "hasMany",
            "relationName": "issueLabel",
            "foreign": "issues",
            "entity": "Label",
            "audited": true
        }
    },
    "collection": {
        "sortBy": "createdAt",
        "asc": false,
        "textFilterFields": [
            "name"
        ]
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        }
    }
}