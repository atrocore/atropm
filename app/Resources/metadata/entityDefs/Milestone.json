{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true,
            "audited": true
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "project-management:views/fields/assigned-user-with-teams-filter"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams",
            "readOnly": true
        },
        "parent": {
            "type": "linkParent",
            "required": true
        },
        "status": {
            "type": "enum",
            "required": true,
            "options": [
                "active",
                "closed"
            ],
            "audited": true,
            "default": "active"
        },
        "totalIssues": {
            "type": "int",
            "audited": true,
            "readOnly": true
        },
        "closedIssues": {
            "type": "int",
            "audited": true,
            "readOnly": true
        },
        "startDate": {
            "type": "date",
            "audited": true
        },
        "dueDate": {
            "type": "date",
            "audited": true
        },
        "issues": {
            "type": "linkMultiple",
            "layoutDetailDisabled": true,
            "layoutListDisabled": true,
            "layoutMassUpdateDisabled": true,
            "noLoad": true,
            "importDisabled": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "EntityTeam",
            "layoutRelationshipsDisabled": true
        },
        "parent": {
            "type": "belongsToParent",
            "entityList": ["Group", "Project"]
        },
        "issues": {
            "type": "hasMany",
            "foreign": "milestone",
            "entity": "Issue",
            "audited": true
        }
    },
    "collection": {
        "sortBy": "createdAt",
        "asc": false,
        "textFilterFields": [
            "name"
        ]
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        }
    }
}